---
import SanityImage from "./SanityImage.astro";
const { title, type, projectImage, slug, excerpt, stack } = Astro.props;
---

<article
  class="rounded-xl bg-slate-200 bg-opacity-90 dark:bg-slate-950 dark:bg-opacity-90"
  data-aos="zoom-in"
>
  <a
    href=`/${type}/${slug}`
    class="group px-4 focus:outline-none focus:ring focus:ring-slate-800 focus:ring-opacity-80 lg:block lg:flex lg:items-center lg:p-6 hover:dark:border-gray-200 dark:hover:text-white focus:dark:ring-slate-100"
  >
    <div class="lg:flex lg:items-center">
      <div class="max-w-[600px] overflow-hidden">
        <SanityImage
          classes="object-cover w-full h-72 lg:h-96 lg:transition-transform lg:duration-1000 group-hover:lg:scale-110"
          node={projectImage}
          width="1440"
        />
      </div>

      <div class="mt-4 p-4 lg:mx-6 lg:mt-0 lg:w-1/2 lg:p-0">
        <h2 class="mb-4">{title}</h2>

        <ul class="mb-2 flex list-none flex-wrap items-center gap-2">
          {
            stack.map((type) => (
              <li class="w-max rounded-lg border border-gray-800 px-3 py-1.5 text-xs font-medium uppercase text-gray-800 dark:border-white dark:text-white">
                {type}
              </li>
            ))
          }
        </ul>

        <p class="mt-3 text-sm text-gray-800 md:text-sm dark:text-white">
          {excerpt}
        </p>
      </div>
    </div>
  </a>
</article>
